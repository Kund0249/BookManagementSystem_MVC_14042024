@model BookManagementSystem_MVC_14042024.Models.PublisherWrapper

@* Data strored inside the Model Property*@




@section head{
    <style>
        .ImageIcons {
            height: 25px;
            width: 25px;
        }
    </style>
}



<div class="row">
    <div class="col-6 offset-3">
        @Html.Partial("_Pagination", Model.pager)
    </div>
</div>


<div class="row">
    <div class="col-6 offset-3">
        <table class="table">
            <thead>
                <tr>
                    <th>Registration Number</th>
                    <th>Publication Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.publishers)
                {
                    <tr>
                        <td>@item.RegistrationId</td>
                        <td>@item.PublisherName</td>
                        <td>
                            @using (Html.BeginForm("Delete", "Publisher", new { id = item.PublisherId }, FormMethod.Post))
                            {
                                <a href="/Publisher/Edit/@item.PublisherId">
                                    <img src="~/Content/Icons/edit.png" class="ImageIcons" />
                                </a>

                                <button type="submit" class="btn"
                                        onclick="return confirm('Are you sure?')">
                                    <img src="~/Content/Icons/delete.jpg" class="ImageIcons" />
                                </button>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

