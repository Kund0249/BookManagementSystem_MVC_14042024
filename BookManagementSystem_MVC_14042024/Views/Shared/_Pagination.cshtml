@model BookManagementSystem_MVC_14042024.Models.Pager

<nav aria-label="Page navigation">
    <ul class="pagination">

        @if (Model.TotalPage > 1)
        {
            if (Model.CurrentPage > 1)
            {
                @Html.ActionLink("Previous",Model.ActionName,Model.ControllerName, new { pageno = Model.CurrentPage - 1 }, new { @class = "page-link" })

            }
            else
            {
                <li class="page-item"><a class="page-link disabled" href="#">Previous</a></li>
            }

            for (int i = Model.StartPage; i <= Model.EndPage; i++)
            {
                <li class="page-item">
                    @Html.ActionLink(i.ToString(), Model.ActionName, Model.ControllerName, new { pageno = i }, new { @class = "page-link" })
                </li>
            }

            if (Model.CurrentPage < Model.TotalPage)
            {
                @Html.ActionLink("Next", Model.ActionName, Model.ControllerName, new { pageno = Model.CurrentPage + 1 }, new { @class = "page-link" })

            }
            else
            {
                <li class="page-item"><a class="page-link disabled" href="#">Next</a></li>
            }
        }
    </ul>
</nav>
